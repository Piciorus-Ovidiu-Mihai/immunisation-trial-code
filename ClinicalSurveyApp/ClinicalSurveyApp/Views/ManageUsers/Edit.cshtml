@model ClinicalSurveyApp.ViewModel.UserDetailsViewModel

@{
    ViewData["Title"] = "Edit users";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-action="edit" asp-controller="ManageUsers" method="post" class="mt-3">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="FirstName"></label>
                <div class="col-sm-10">
                    <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName"></label>
                <div class="col-sm-10">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger" placeholder="LastName"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" placeholder="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber"></label>
                <div class="col-sm-10">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger" placeholder="PhoneNumber"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="index" asp-controller="ManageUsers"
                       class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>