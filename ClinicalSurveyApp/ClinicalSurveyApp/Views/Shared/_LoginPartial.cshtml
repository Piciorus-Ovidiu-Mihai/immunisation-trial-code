@using Microsoft.AspNetCore.Identity
@using ClinicalSurveyApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <div class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            @if (User.IsInRole("Admin"))
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="nav-link text-white" asp-controller="ManageUsers" asp-action="ListRoles">Manage Users</a>
                    </li>
                </ul>
            }
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="nav-link text-white">Hello @UserManager.GetUserName(User)!</a>
                    </li>
                    <li class="nav-item">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link text-white">Log out</button>
                    </li>
                </ul>
            </form>
            <form asp-area="" asp-controller="Account" asp-action="Details" method="get" id="userDetailsForm" class="navbar-right">
                <ul class="nav navbar-nav navbar-right">

                    <li class="nav-item">
                        <button type="submit" class="btn btn-link navbar-btn navbar-link text-white">Account</button>
                    </li>
                </ul>
            </form>
        }
        else
        {
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
            </ul>

        }
    </div>
